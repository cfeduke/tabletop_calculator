- title "Army Lists"

%table
  %tr
    %th Name
    %th Game system
    %th Maximum point value
    %th User
    %th Tags
    %th
    %th
    %th
  - for army_list in @army_lists
    %tr
      %td= army_list.name
      %td= army_list.game_system.name if not army_list.game_system.nil?
      %td= army_list.points
      %td= army_list.user.name if not army_list.user.nil?
      %td= army_list.tag_list
      %td= link_to 'Show', army_list
      %td= link_to 'Edit', edit_army_list_path(army_list)
      %td= link_to 'Destroy', army_list, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Army List", new_army_list_path
