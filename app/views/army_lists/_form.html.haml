= form_for @army_list do |f|
  = f.error_messages
  %p
    = f.label :name
    %br
    = f.text_field :name
  %p
    = f.label :tags
    %br
    = f.text_field :tags
  %p
    = f.label :game_system_id, "Game System"
    %br
    = f.select(:game_system_id, GameSystem.order(:name).collect { |gs| [ gs.name, gs.id ] }, { :prompt => true })
  %p
    = f.label :points
    %br
    = f.text_field :points
  %p
    = f.label :user_id
    %br
    = f.text_field :user_id
  %p
    = f.submit
